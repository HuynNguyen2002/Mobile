<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Product.Product_Activity">

    <!-- RelativeLayout chứa thông tin về Category -->
    <RelativeLayout
        android:id="@+id/banhcuon_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="285dp"
            android:layout_marginBottom="-93dp"
            android:elevation="4dp"
            android:text="Quay lại"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="363dp"
            android:elevation="4dp"
            app:srcCompat="@drawable/icon_back" />

        <ImageView
            android:id="@+id/imgCategoryDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-5dp"
            app:srcCompat="@drawable/category_banhcuon" />

        <!-- TextView nằm góc dưới bên trái của ImageView -->
        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgCategoryDetail"
            android:layout_alignStart="@+id/imgCategoryDetail"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            android:text="Bánh cuốn"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- RecyclerView để hiển thị danh sách sản phẩm nằm bên dưới ImageView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banhcuon_relative"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:scrollbars="vertical" />

</RelativeLayout>
