<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    tools:context="Nagigationkey.Nagigationkey">

    <!--Tạo ViewPager -->

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/ngv_viewPager"
            android:layout_weight="10.75"
            android:layout_width="match_parent"
            android:layout_height="0dp"></androidx.viewpager.widget.ViewPager>

        <!--Tạo BottomNavigationView -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/ngv_bottomNavigation"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1.25"
            android:layout_height="0dp"
            android:background="@drawable/border"
            app:menu="@menu/navigationkey"
            app:itemIconTint="@color/changecolor_ngv"
            app:itemTextColor="@color/changecolor_ngv"
            >

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>